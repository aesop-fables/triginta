{
  "name": "@aesop-fables/triginta",
  "version": "0.4.0",
  "description": "A lightweight framework that wraps the basic infrastructure usages of AWS Lambda (SQS, Kinesis, etc.).",
  "type": "commonjs",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "default": "./lib/index.js"
    }
  },
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "build": "rimraf ./lib && tsc --p ./tsconfig.build.json",
    "format": "prettier --write \"src/**/*.(js|ts)\"",
    "lint": "eslint src --ext .js,.ts",
    "lint:fix": "eslint src --fix --ext .js,.ts",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --config jest.config.js --watch",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "@aesop-fables/containr": "^0.2.3",
    "@middy/core": "^4.2.7",
    "@middy/http-error-handler": "^4.2.3",
    "@middy/http-json-body-parser": "^4.2.3",
    "@types/aws-lambda": "^8.10.109",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.11",
    "@typescript-eslint/eslint-plugin": "^5.45.1",
    "@typescript-eslint/parser": "5.55.0",
    "esbuild": "^0.17.8",
    "eslint": "8.34.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "29.3.1",
    "jest-mock-extended": "^3.0.1",
    "prettier": "^2.8.1",
    "reflect-metadata": "^0.1.13",
    "ts-jest": "29.0.5",
    "typescript": "4.9.5"
  },
  "files": [
    "lib/**/*"
  ],
  "peerDependencies": {
    "@aesop-fables/containr": "0.2.x",
    "@middy/core": "4.x",
    "@middy/http-error-handler": "4.x",
    "@middy/http-json-body-parser": "4.x",
    "reflect-metadata": "0.1.x"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/aesop-fables/typescript-libraries.git"
  },
  "publishConfig": {
    "access": "public"
  }
}
